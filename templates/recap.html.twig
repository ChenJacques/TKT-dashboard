<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}TKT Dashboard{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" href="{{ asset('./styles.css') }}">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body class="box1">
        {% block body %}

        <div class="navbar">
            <a href ="http://localhost:8000" class="button"> 
                <img src ="./logo.png"/>
            </a>
            <h2>Dashboard</h2>
        </div>
        <div class="dashboard">

            <div>
            <h1>{{data1.name}}</h1>
            <h3>N° SIREN : {{data1.siren}}</h3>
            <a href="http://localhost:8000/" class="button">Retour</a>
            </div>

            <div>
            <h2>Chiffre d'affaire</h2>
            <h3>2016 : {{data2[id[1]-1].ca}} €</h3>
            <h3>2017 : {{data2[id[0]-1].ca}} €</h3>
            </div>

            <div>
            <h2>EBITDA</h2>
            <h3>2016 : {{data2[id[1]-1].ebitda}} €</h3>
            <h3>2017 : {{data2[id[0]-1].ebitda}} €</h3>
            </div>

            <div>
            <h2>Loss</h2>
            <h3>2016 : {{data2[id[1]-1].loss}} €</h3>
            <h3>2017 : {{data2[id[0]-1].loss}} €</h3>
            </div>

            <div>
            <h2>Margin</h2>
            <h3>2016 : {{data2[id[1]-1].margin}} €</h3>
            <h3>2017 : {{data2[id[0]-1].margin}} €</h3>
            </div>
        
        </div>
        {% endblock %}
    </body>
</html>