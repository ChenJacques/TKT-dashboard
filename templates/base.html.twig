<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}TKT Dashboard{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" href="{{ asset('./styles.css') }}">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body class=box1>
        {% block body %}

        <div class="navbar">
            <a href ="https://localhost:8000" class="button"> 
                <img src ="./logo.png"/>
            </a>
            <h2>Dashboard</h2>
        </div>

        <div class="dashboard">
            <div>
                <h1>Welcome on TKT dashboard!</h1>
                <input type="text" placeholder="Sector">
                <input type="text" placeholder="Company">
            </div>

            <div class="box2">
                <ol>COMPANY
                    {% for item in data %}
                    <li>{{ item.name }}</li>
                    {% endfor %}
                </ol>

                <ol>SIREN
                    {% for item in data %}
                    <li>{{ item.siren }}</li>
                    {% endfor %}
                </ol>

                <ol>CATEGORY
                    {% for item in data %}
                        <a href ="http://localhost:8000/{{item.id}}" class="button">
                            <li>{{ item.sector }}</li>
                        </a>
                    {% endfor %}
                    </ol>
            </div>
        </div>

        {% endblock %}
    </body>
</html>